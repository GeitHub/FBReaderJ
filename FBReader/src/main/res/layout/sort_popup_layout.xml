<?xml version="1.0" encoding="utf-8"?>
<RadioGroup
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:background="@drawable/black_border_white_background_rectangle"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <RadioButton
        android:id="@+id/sort_by_title"
        android:layout_width="match_parent"
        android:button="@null"
        android:drawableRight="@drawable/sortby_radio_button_drawable"
        android:drawablePadding="30dp"
        android:layout_height="wrap_content"
        android:text="@string/sort_by_title"/>
    <RadioButton
        android:id="@+id/sort_by_author"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:button="@null"
        android:drawableRight="@drawable/sortby_radio_button_drawable"
        android:drawablePadding="30dp"
        android:text="@string/sort_by_author"/>
</RadioGroup>